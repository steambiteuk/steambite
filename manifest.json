{
    "manifest_version": 3,
    "name": "SteamBite",
    "version": "1.0.0",
    "description": "Compare Steam game prices with real-world products. How many Big Macs can you buy for this game?",
    "author": "GameBites",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://store.steampowered.com/*",
        "https://api.frankfurter.app/*",
        "https://steambite.uk/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "SteamBite"
    },
    "content_scripts": [
        {
            "matches": [
                "https://store.steampowered.com/*"
            ],
            "css": [
                "content.css"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "https://store.steampowered.com/*"
            ]
        }
    ]
}